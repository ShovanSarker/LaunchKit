# =============================================================================
# LaunchKit - Development Environment Configuration Example
# =============================================================================
# Copy this file to .env.dev and update values as needed.
# The bootstrap script will create/update .env.dev based on this template.

# =============================================================================
# PROJECT SETTINGS
# =============================================================================
PROJECT_NAME=launchkit
COMPOSE_PROJECT_NAME=launchkit-dev

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=dev-change-me
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:3000
DJANGO_STATIC_ROOT=/app/staticfiles
DJANGO_MEDIA_ROOT=/app/media

# =============================================================================
# NEXT.JS SETTINGS
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# DATABASE SETTINGS (PostgreSQL)
# =============================================================================
POSTGRES_USER=launchkit
POSTGRES_PASSWORD=postgres
POSTGRES_DB=launchkit_dev
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgres://launchkit:postgres@db:5432/launchkit_dev

# =============================================================================
# RABBITMQ SETTINGS
# =============================================================================
RABBITMQ_DEFAULT_USER=launchkit
RABBITMQ_DEFAULT_PASS=guest

# =============================================================================
# REDIS SETTINGS
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# CELERY SETTINGS
# =============================================================================
CELERY_BROKER_URL=amqp://launchkit:guest@amqp:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/1

# =============================================================================
# EMAIL SETTINGS
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG
