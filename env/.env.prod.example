# =============================================================================
# LaunchKit - Production Environment Configuration Example
# =============================================================================
# Copy this file to .env.prod and update values as needed.
# The bootstrap script will create/update .env.prod based on this template.

# =============================================================================
# PROJECT SETTINGS
# =============================================================================
PROJECT_NAME=launchkit
COMPOSE_PROJECT_NAME=launchkit-prod

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
DJANGO_DEBUG=0
DJANGO_SECRET_KEY=prod-change-me
DJANGO_ALLOWED_HOSTS=api.example.com
CSRF_TRUSTED_ORIGINS=https://api.example.com,https://app.example.com
DJANGO_STATIC_ROOT=/app/staticfiles
DJANGO_MEDIA_ROOT=/app/media

# =============================================================================
# NEXT.JS SETTINGS
# =============================================================================
NEXT_PUBLIC_API_URL=https://api.example.com

# =============================================================================
# DOMAIN & EMAIL SETTINGS
# =============================================================================
PUBLIC_DOMAIN_API=api.example.com
PUBLIC_DOMAIN_APP=app.example.com
ADMIN_EMAIL=admin@example.com
DEFAULT_FROM_EMAIL=noreply@example.com
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# =============================================================================
# DATABASE SETTINGS (PostgreSQL)
# =============================================================================
POSTGRES_USER=launchkit
POSTGRES_PASSWORD=prod-change-me
POSTGRES_DB=launchkit_prod
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgres://launchkit:prod-change-me@db:5432/launchkit_prod

# =============================================================================
# RABBITMQ SETTINGS
# =============================================================================
RABBITMQ_DEFAULT_USER=launchkit
RABBITMQ_DEFAULT_PASS=prod-change-me

# =============================================================================
# REDIS SETTINGS
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# CELERY SETTINGS
# =============================================================================
CELERY_BROKER_URL=amqp://launchkit:prod-change-me@amqp:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/1

# =============================================================================
# FLOWER SETTINGS (Celery Monitoring)
# =============================================================================
FLOWER_USER=admin
FLOWER_PASSWORD=prod-change-me

# =============================================================================
# MONITORING (Uptime Kuma, Dozzle)
# Set to 'true' to enable monitoring services in docker-compose.prod.yml
# =============================================================================
ENABLE_MONITORING=false

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
